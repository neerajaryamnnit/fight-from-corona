<header>
  <nav class="navbar  navbar-expand-lg navbar-light bg-light fixed-top">
    <a class="navbar-brand" href="/" target="_parent"><%= image_tag("logo.png", size: '75', class: "img-fluid img-thumbnail") %></a>
    <!--    <b> <%#= t(:title) %></b>-->
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">


      </ul>

      <div class="form-inline my-2 my-lg-0">
        <ul class="navbar-nav">
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <%= t 'language' %>
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
              <%= link_to "English", users_change_locale_path({locale: 'en'}), class: "dropdown-item", target: "_parent" %>
              <%= link_to "हिंदी", users_change_locale_path({locale: 'hn'}), class: "dropdown-item", target: "_parent" %>

            </div>
          </li>
        </ul>
        <!--        <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">-->
        <% if current_user %>
          <a href=  "update-profile" ><button type="button" class="btn btn-outline-success my-2 mr-3 ml-3"><%= t('Update Profile') %></button></a>
          <label class="btn btn-outline-success my-2 my-sm-0"><%= t('username_html', name: current_user.name) %></label>
        <% end %>
      </div>

    </div>
    <toaster-container toaster-options="{showMethod: 'show', showEasing: 'linear', showDuration: 100, 'close-button':false, 'time-out':{'toast-success': 1500, 'toast-warning': 1500, 'toast-error': 2000 } }">

    </toaster-container>
  </nav>
